<div class="container mt-4">
    <h1><%= @task.title %></h1>
    <%= link_to "edit", task_edit_path, class: "btn btn-primary" %>
    <hr>
  <div class="bg-secondary p-4 mb-3">
    <h3><%= @task.details %></h3>
  </div>

 <% if @task.completed %>
  <i class="fa fa-check-square-o"></i> This task is completed
 <% else %>
  <i class="fa fa-square-o"></i> This task is not completed yet
 <% end %>

  <%= link_to "Back to list", tasks_path, class: "btn btn-primary" %>
</div>
