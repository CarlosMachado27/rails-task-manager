<div class="container mt-5">
  <h1>Edition Platform</h1>
  <br>
  <%= form_for(@task) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <br>
    <br>
    <%= f.label :details %>
    <%= f.text_field :details %>
    <br>
    <br>
    <%= f.label :completed %>
    <%= f.check_box :completed %>
    <%= f.submit class: "btn btn-primary" %>
  <% end %>
</div>
